<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "delete", dose_path(dose), method: :delete %> </li>
        <% end %>
      </ul>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>
